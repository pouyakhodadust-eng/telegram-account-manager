# Telegram Account Manager - Environment Variables
# Copy this file to .env and fill in your values

# ==============================================================================
# TELEGRAM BOT CONFIGURATION (Required)
# ==============================================================================

# Get these from https://my.telegram.org/apps
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_BOT_PHONE=+1234567890

# ==============================================================================
# ADMIN TELEGRAM USER ID (Required for whitelist)
# ==============================================================================

# Your numeric Telegram user ID (get it from @userinfobot)
ADMIN_TELEGRAM_ID=123456789

# Users allowed to use the bot (comma-separated numeric IDs)
ALLOWED_USERS=123456789,987654321

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

DB_HOST=postgres
DB_PORT=5432
DB_NAME=telegram_accounts
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password

# ==============================================================================
# REDIS CONFIGURATION (Optional)
# ==============================================================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ==============================================================================
# SECURITY
# ==============================================================================

# Session encryption key (generate a strong random key)
SESSION_KEY=your_very_secure_random_key_at_least_32_characters_long

# ==============================================================================
# LOGGING
# ==============================================================================

LOG_LEVEL=INFO

# ==============================================================================
# PROXY SETTINGS (Optional - can be configured via bot)
# ==============================================================================

# Default proxy (optional)
# PROXY_ENABLED=false
# PROXY_HOST=proxy.example.com
# PROXY_PORT=1080
# PROXY_USERNAME=
# PROXY_PASSWORD=
